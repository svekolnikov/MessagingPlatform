@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "Users";
}

<h3>@ViewBag.Title</h3>

<hr/>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>
            <a class="btn btn-sm btn-outline-success w-100" asp-controller="Users" asp-action="Create">
                Create
            </a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>   
                <form asp-action="DeleteConfirmed" asp-route-id="@item.Id">
                    <div class="btn-group w-100">
                        <a class="btn btn-sm btn-outline-warning w-50" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <input type="submit" class="btn btn-sm btn-outline-danger w-50" value="Delete"/>
                    </div>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>